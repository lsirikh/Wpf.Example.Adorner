<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:units="clr-namespace:Wpf.AdornerProject.Sample.UI.Units">


	<Style TargetType="{x:Type units:CustomRectangle}">
		<Setter Property="IsHitTestVisible" Value="False"/>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type units:CustomRectangle}">
					<Grid>
						<Rectangle Width="{TemplateBinding ShapeWidth}"
                                   Height="{TemplateBinding ShapeHeight}"
                                   Fill="{TemplateBinding Fill}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>